{
    "name": "jinya/backend",
    "homepage": "https://jinya.de",
    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "monolog/monolog": "1.25.3",
        "php-di/php-di": "6.1.0",
        "phpmailer/phpmailer": "^6.1",
        "slim/psr7": "0.5.0",
        "slim/slim": "4.5.0",
        "slim/views": "0.1.3",
        "vlucas/phpdotenv": "4.1.4",
        "vlucas/spot2": "2.2.1"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "^7.5"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S 0.0.0.0:8080 -t public",
        "test": "phpunit"
    }
}
