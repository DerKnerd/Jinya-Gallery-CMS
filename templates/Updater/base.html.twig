<html>
<head>
    <title>{{ 'app.name'|trans() }}{% block title %}{% endblock %}</title>
    {% block styles %}
        <link rel="stylesheet"
              href="https://cdnjs.cloudflare.com/ajax/libs/fomantic-ui/2.7.4/components/button.min.css"/>
        <link rel="stylesheet"
              href="https://cdnjs.cloudflare.com/ajax/libs/fomantic-ui/2.7.4/components/segment.min.css"/>
        <link rel="stylesheet"
              href="https://cdnjs.cloudflare.com/ajax/libs/fomantic-ui/2.7.4/components/form.min.css"/>
        <link rel="stylesheet"
              href="https://cdnjs.cloudflare.com/ajax/libs/fomantic-ui/2.7.4/components/message.min.css"/>
        <link rel="stylesheet"
              href="https://cdnjs.cloudflare.com/ajax/libs/fomantic-ui/2.7.4/components/label.min.css"/>
        <link rel="stylesheet"
              href="https://cdnjs.cloudflare.com/ajax/libs/fomantic-ui/2.7.4/components/container.min.css"/>
        <link rel="stylesheet"
              href="https://cdnjs.cloudflare.com/ajax/libs/fomantic-ui/2.7.4/components/step.min.css"/>
        <link rel="stylesheet"
              href="https://cdnjs.cloudflare.com/ajax/libs/fomantic-ui/2.7.4/components/icon.min.css"/>
        <link rel="stylesheet"
              href="https://cdnjs.cloudflare.com/ajax/libs/fomantic-ui/2.7.4/components/dropdown.min.css"/>
        <link rel="stylesheet"
              href="https://cdnjs.cloudflare.com/ajax/libs/fomantic-ui/2.7.4/components/transition.min.css"/>
        <style>
            .ui.selection.dropdown {
                min-height: unset;
            }
        </style>
    {% endblock %}
    {% block meta %}
        <meta charset="utf-8"/>
        <meta http-equiv="X-UA-Compatible" content="IE=Edge"/>
        <meta name="viewport" content="width=device-width"/>
        {% block custom_meta %}
        {% endblock %}
    {% endblock %}
</head>
<body>
{% block body %}
    {% if form is defined %}
        {% form_theme form with ['@Jinya/fomantic-form-theme.html.twig'] %}
    {% endif %}
    <main class="ui container">
        <h1>{{ 'update.title'|trans }}</h1>
        {% block content %}{% endblock %}
    </main>
{% endblock %}
{% block scripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fomantic-ui/2.7.4/components/transition.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fomantic-ui/2.7.4/components/dropdown.min.js"></script>
{% endblock %}
</body>
</html>